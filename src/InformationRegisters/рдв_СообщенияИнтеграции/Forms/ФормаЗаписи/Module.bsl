	ЗаписьОбъект.ДанныеСообщения = Новый ХранилищеЗначения(Строка, Новый СжатиеДанных(9));
	ЗаписьОбъект.Записать();
	
	ЗначениеВРеквизитФормы(ЗаписьОбъект, "Запись");
	
	Записать();
	
